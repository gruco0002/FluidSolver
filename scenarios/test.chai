/*
Basic scenario
*/

scenarioInfo.scenarioName = "Test Scenario";
scenarioInfo.restDensity = 1.0;
scenarioInfo.particleSize = 1.0;

def getMass() {
    return scenarioInfo.restDensity * (scenarioInfo.particleSize * scenarioInfo.particleSize);
}

def loadParticles() {

    var p = Particle();

    p.x = 5.0;
    p.y = 5.0;
    p.type = 0;
    p.mass = getMass();
    p.density = scenarioInfo.restDensity;

    var index = addParticle(p);

}

loadParticles();